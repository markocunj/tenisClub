@model TC.DomainModels.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Choose starting date and time</label>
                <input asp-for="DateAndStartTime" class="form-control" />
                <span asp-validation-for="DateAndStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Choose ending date and time</label>
                <input asp-for="DateAndEndTime" class="form-control" />
                <span asp-validation-for="DateAndEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Choose court</label>
                <select asp-for="CourtId" asp-items="ViewBag.Courts" class="form-control"></select>
                <span asp-validation-for="CourtId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
